{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [2, "always", ["feat", "fix", "build", "docs", "chore", "test", "refactor", "ci", "release", "!BREAKING CHANGE", "!HOTFIX"]],
    "subject-case": [0, "always", "sentence-case"],
    "header-max-length": [2, "always", 72],
    "type-empty": [2, "never"],
    "subject-empty": [2, "never"]
  },
  "parserPreset": {
    "parserOpts": {
      "ignorePattern": "^chore\\(release\\): .*"
    }
  }
}